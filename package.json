{
	"name": "@skyra/gifenc",
	"version": "0.0.1",
	"description": "A very fast server-side animated GIF generation for Node.js",
	"author": "@skyra",
	"license": "MIT",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"sideEffects": false,
	"homepage": "https://skyra-project.github.io/gifenc",
	"private": false,
	"files": [
		"dist"
	],
	"scripts": {
		"lint": "eslint src --ext ts --fix",
		"format": "prettier --write {src}/**/*.ts",
		"docs": "typedoc",
		"update": "yarn upgrade-interactive --latest",
		"build": "rollup -c rollup.config.ts",
		"watch": "yarn build -w",
		"sversion": "standard-version",
		"commit": "git-cz",
		"cz": "git-cz",
		"prepublishOnly": "yarn build",
		"prepare": "husky install .github/husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@sapphire/eslint-config": "^3.2.1",
		"@sapphire/prettier-config": "^1.1.6",
		"@sapphire/ts-config": "^2.3.1",
		"@types/jest": "^26.0.24",
		"@types/node": "^15.14.0",
		"@typescript-eslint/eslint-plugin": "^4.27.0",
		"@typescript-eslint/parser": "^4.28.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.30.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"husky": "^7.0.1",
		"lint-staged": "^11.0.0",
		"prettier": "^2.3.2",
		"pretty-quick": "^3.1.1",
		"rollup": "^2.53.2",
		"rollup-plugin-cleaner": "^1.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.30.0",
		"standard-version": "^9.3.0",
		"typedoc": "^0.21.0",
		"typescript": "^4.3.5"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skyra-project/gifenc.git"
	},
	"engines": {
		"node": ">=12",
		"npm": ">=6"
	},
	"keywords": [
		"typescript",
		"ts",
		"yarn",
		"gif",
		"gifenc",
		"encoder",
		"utility"
	],
	"bugs": {
		"url": "https://github.com/skyra-project/gifenc/issues"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"resolutions": {
		"acorn": "^8.4.0",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"dot-prop": "^6.0.1",
		"marked": "^2.1.1",
		"trim-newlines": "^3.0.1"
	},
	"prettier": "@sapphire/prettier-config"
}
